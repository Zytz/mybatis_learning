<mapper namespace="com.john.dao.IUserDao">

    <!--sql唯一表示：namespace.id组成statementId-->
    <select id="findList" resultType="com.john.pojo.User" parameterType="com.john.pojo.User">
        select * from user
    </select>

    <!--
    传入参数封装成某个实体
        User user = new User();
        user.setId(1);
        user.setUsername("zhanshan")
    -->
    <select id="findOne" resultType="com.john.pojo.User" parameterType="com.john.pojo.User">
        select * from user where id = #{id} and username=#{username}
    </select>


</mapper>